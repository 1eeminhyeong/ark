---
import type { CollectionEntry } from 'astro:content'
import { ComponentTabs } from '~/components/navigation/component-tabs'
import PageHeader from '~/components/page-header.astro'
import DocsLayout from './docs-layout.astro'

interface Props {
  component: CollectionEntry<'components'>
  currentTab: string
}

const { component, currentTab } = Astro.props
---

<DocsLayout>
  <PageHeader component={component} />
  <ComponentTabs currentTab={currentTab} client:load transition:persist />
  <slot />
</DocsLayout>
