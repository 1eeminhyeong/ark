---
import { getCollection } from 'astro:content'
import { Stack } from 'styled-system/jsx'
import { Typography } from '../ui/typography'
import { FrameworkSelect } from './framework-select'
import { SidebarGroup } from './sidebar-group'
import ExternalLinks from './external-links.astro'

const { framework, component, doc } = Astro.params

const priority = [
  'introduction',
  'getting-started',
  'as-child-prop',
  'styling',
  'animation',
  'changelog',
]

const docs = await getCollection('docs').then((items) =>
  items
    .map((item) => ({
      id: item.data.id,
      title: item.data.title,
      slug: `/docs/${framework}/overview/${item.data.id}`,
    }))
    .sort((a, b) => priority.indexOf(a.id) - priority.indexOf(b.id)),
)

const components = await getCollection('components', ({ id }) =>
  id.startsWith(framework ?? 'react'),
).then((items) =>
  items.map((item) => ({
    id: item.data.id,
    title: item.data.title,
    slug: `/docs/${framework}/components/${item.data.id}/usage`,
  })),
)
---

<Stack gap="8" width="full">
  <ExternalLinks />
  <FrameworkSelect framework={framework} client:load />
  <Stack gap="3">
    <Typography textStyle={{ base: 'md', md: 'sm' }} fontWeight="bold">Overview</Typography>
    <SidebarGroup items={docs} currentValue={doc} client:load />
  </Stack>
  <Stack gap="3">
    <Typography textStyle={{ base: 'md', md: 'sm' }} fontWeight="bold">Components</Typography>
    <SidebarGroup items={components} currentValue={component} client:load />
  </Stack>
</Stack>
