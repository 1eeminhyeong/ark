---
import { SiNextdotjs, SiSolid } from '@icons-pack/react-simple-icons'
import { Flex, Grid, Stack } from 'styled-system/jsx'
import { Text } from '~/components/ui'

const { slug } = Astro.params
const cssFramework = slug?.split('/')[0] ?? 'panda'

const frameworks = [
  { name: 'Next.js', icon: SiNextdotjs, slug: 'templates/react/next-js' },
  { name: 'Solid Start', icon: SiSolid, slug: 'templates/solid/solid-start' },
]
---

<Grid gap={{ base: '4', md: '6' }} columns={3} className="not-prose">
  {
    frameworks
      .map(({ name, icon: Icon, slug }) => (
        <a href={'https://stackblitz.com/github/chakra-ui/ark/tree/main/' + slug} target="_blank">
          <Flex
            borderRadius="l3"
            borderWidth="1px"
            p="4"
            bg="bg.default"
            color="fg.default"
            align="center"
            justify="center"
          >
            <Stack gap="2.5">
              {/* @ts-expect-error Incorrect types */}
              <Icon size="48" />
              <Text textStyle="sm" textAlign="center">
                {name}
              </Text>
            </Stack>
          </Flex>
        </a>
      ))
  }
</Grid>
