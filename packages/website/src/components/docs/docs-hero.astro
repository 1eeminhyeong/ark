---
import { Box, Container } from '@ark-ui/styled-system/jsx'
import type { CollectionEntry } from 'astro:content'
import { Heading, Text } from '~/components/ui'
import { Prose } from '../ui/prose'

interface Props {
  entry: CollectionEntry<'overview' | 'components'>
}

const { entry } = Astro.props
---

<Box bg={{ base: 'gray.50', _dark: 'black' }} borderBottomWidth="1px" position="relative">
  <Container maxW="66rem" py={{ base: '16', md: '24' }}>
    <Prose css={{ '&> :first-child': { mt: '0' } }}>
      <Heading as="h1" fontWeight="bold">{entry.data.title}</Heading>
      <Text className="lead" color="fg.emphasized">{entry.data.description}</Text>
    </Prose>
  </Container>
  <!-- 
    <Box position="absolute" bottom="0">
      <DocsHeroTabs client:load />
    </Box> -->
</Box>
